<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/alert_dialog_corners"
    app:cardElevation="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            android:layout_alignParentRight="true"
            android:padding="20dp"
            />

    <LinearLayout
        android:layout_below="@id/close_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:layout_marginRight="20dp"
        >

            <TextView
                android:id="@+id/CopyrightInfringeTV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Report Copyright Infringement"
                android:fontFamily="@font/loraregular"
                android:textColor="#000"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"

                />


         <TextView
                    android:id="@+id/ObjectionaleContentTV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Report Objectionable Content"
                    android:fontFamily="@font/loraregular"
                    android:textColor="#000"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    />
         <TextView
                    android:id="@+id/spellingMistakeTV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Report Spelling Mistake"
                    android:fontFamily="@font/loraregular"
                    android:textColor="#000"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    />
         <TextView
                    android:id="@+id/queryTV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Post Query For Fact"
                    android:fontFamily="@font/loraregular"
                    android:textColor="#000"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    />


    </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>